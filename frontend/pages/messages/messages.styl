@import "../../styles/variables"
@import "../../styles/mixins"

.messages
  padding: 20px 0
  .message-item
    position: relative
    margin-bottom: 20px
    display: flex
    &:last-child
      margin-bottom: 0
    
    &.self
      flex-direction: row-reverse
      .text-wrap
        text-align: right
        .arrow
          border: none
        .nickname
          display: flex
          flex-direction: row-reverse
          .time
            margin-right: 8px

    .avatar
      size: 40px
      background-size: 100% 100%
      border-radius: 50%
      margin: 0 10px

    .text-wrap
      position: relative
      max-width: calc(100% - 150px)
      .arrow
        absolute: top 20px left -13px
        size: 0
        border: 8px solid transparent
        border-right: 8px solid rgb(162, 212, 242)
      .nickname
        font-size: $font-size-small
        margin-bottom: 5px
        .time
          color: $color-text-ll
          margin-left: 8px
      .text
        display: inline-flex
        flex-wrap: wrap
        align-items: center
        padding: 6px 12px
        line-height: 24px
        background: rgb(162, 212, 242)
        border-radius: 5px

    .msg-emoji
      size: 30px
      background: url('../../assets/images/emojis.png') no-repeat
      background-size: 30px auto
      margin-right: 6px
      &:last-child
        margin-right: 0