@import "../../styles/variables"
@import "../../styles/mixins"

.my-field
  display: flex
  padding: 12px
  align-items: center
  background: $white
  border-1px($color-border, 10px)

  .left
    flex: 1
  
  .right
    display: flex
    align-items: center
    .avatar
      size: 40px
      border-radius: 50%
    .text
      color: $color-text-l
    .blank
      margin-left: 8px
      size: 24px
      display: inline-block
    .icon
      margin-left: 4px
      color: $color-text-ll
      font-size: 24px
      &.right-show
        color: $white
