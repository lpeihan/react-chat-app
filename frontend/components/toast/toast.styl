@import "../../styles/variables"
@import "../../styles/mixins"

.toast
  fixed: top 50% left 50%
  transform: translate3d(-50%, -50%, 0)
  size: 100px
  color: $white
  background: $color-overlay
  border-radius: 5px
  text-align: center
  line-height: 100px

  &.fade
    &-enter
      opacity: 0
      top: 60%
    &-enter-active
      opacity: 1
      top: 50%
      transition: all 500ms
    &-leave-active
      opacity: 0
      top: 60%
      transition: all 500ms